<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">
    <TextView
        android:id="@+id/labelSearchManga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="36sp"
        android:text="@string/labelSearchManga"
        android:layout_margin="25dp"
        ></TextView>
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/labelSearchManga"
        app:layout_constraintRight_toRightOf="@id/labelSearchManga"
        app:layout_constraintTop_toTopOf="@id/labelSearchManga"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="30dp"
        ></EditText>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/searchGoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_search_text"
        android:onClick="sendSearchManga"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintRight_toRightOf="@id/searchBar"
        app:layout_constraintLeft_toLeftOf="@id/searchBar"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>